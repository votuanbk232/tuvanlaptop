    <body>
        @if (ViewBag.ThongBao != null)
        {
            <div style="text-align:center;color:red;">@ViewBag.ThongBao</div>
        }
        <div class="container-fluid-full">
            <div class="row-fluid">

                <div class="row-fluid">
                    <div class="login-box">
                        <div class="icons">
                            <a title="Trang chủ" href="@Url.Action("Index","Home")"><i class="halflings-icon home"></i></a>
                            <a href="#"><i class="halflings-icon cog"></i></a>
                        </div>
                        <h2>Đăng kí tài khoản</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form class="form-horizontal" action="/NguoiDung/DangKy" method="post">
                            <fieldset>
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                <div class="input-prepend">
                                    <span class="add-on"><i class="halflings-icon user"></i></span>
                                    @*@Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "input-large span10" } })*@
                                    <input class="input-large span10" name="HoTen" id="username" type="text" placeholder="Họ tên" />
                                   
                                 </div>
                               
                               
                                <div class="clearfix"></div>

                                <div class="input-prepend" title="ngaysinh">
                                    <span class="add-on"><i class="halflings-icon user"></i></span>
                                    <input @*value="@string.Format("{0:yyyy-MM-dd}",Model.NgaySinh)"*@ class="input-large span10" name="NgaySinh" id="username" type="date"  placeholder="Ngày sinh" />
                                </div>
                                <div class="clearfix"></div>

                                <div class="input-prepend" title="dienthoai">
                                    <span class="add-on"><i class="halflings-icon user"></i></span>
                                    <input class="input-large span10" name="DienThoai" id="username" type="text" placeholder="Điện thoại" />
                                </div>
                                <div class="clearfix"></div>

                                <div class="input-prepend" title="Username">
                                    <span class="add-on"><i class="halflings-icon user"></i></span>
                                    <input class="input-large span10" name="TaiKhoan" id="TaiKhoan" type="text" placeholder="type username" />
                                </div>
                              
                                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                       
                                <div class="clearfix"></div>
                                <div class="input-prepend" title="Password">
                                    <span class="add-on"><i class="halflings-icon lock"></i></span>
                                    <input class="input-large span10" name="MatKhau" id="MatKhau" type="password" placeholder="type password" />
                                </div>
             
                                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                               
                                 <div class="input-prepend" title="PasswordAgain">
                                    <span class="add-on"><i class="halflings-icon lock"></i></span>
                                    <input class="input-large span10" name="XacNhanMatKhau" id="XacNhanMatKhau" type="password" placeholder="password again" />
                                </div>

                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                               
                                 <div class="clearfix"></div>
                                <div class="input-prepend" title="email">
                                    <span class="add-on"><i class="halflings-icon lock"></i></span>
                                    <input class="input-large span10" name="Email" id="password" type="email" placeholder="Email" />
                                </div>
                                <div class="clearfix"></div>
                                <div class="input-prepend" title="diachi">
                                    <span class="add-on"><i class="halflings-icon lock"></i></span>
                                    <input class="input-large span10" name="DiaChi" id="password" type="text" placeholder="Địa chỉ" />
                                </div>
                                <div class="clearfix"></div>

                                @*<label class="remember" for="remember"><input type="checkbox" id="remember" />Remember me</label>*@
                                <div class="button-login">
                                    <input type="submit" class="btn btn-primary" value="Đăng Kí" onclick="return IsValid()"/>
                                </div>
                                <div class="clearfix"></div>
                            </fieldset>
                        </form>
}
